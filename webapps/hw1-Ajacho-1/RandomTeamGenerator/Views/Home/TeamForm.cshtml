@model RandomTeamGenerator.Models.TeamFormation
@{
    ViewData["Title"] = "Team Form Generator";
}

<head>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css"
        integrity="sha384-+0n0xVW2eSR5OomE6p0cr8AkwSXT6j/mj2XqDjli5Keh4km9BqVZxboF+eXzPn8r" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.2/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>

    @* <script src="~/js/booking.js"></script> *@
</head>

<html>

<div class="text-center">
    <h1 class="display-5">Random Team Generator Form</h1>

    <form asp-action="TeamForm" method="post">
        <div>
            <label asp-for="Names">Names Here:</label>
            <textarea id="names" asp-for="Names" rows="5">@Model.Names</textarea>
            <span asp-validation-for="Names" class="text-danger"></span>
        </div>

        <div>
            <label asp-for="TeamSize">Number of members:</label>
            <input type="number" id="teamSize" asp-for="TeamSize" />
            <span asp-validation-for="TeamSize" class="text-danger"></span>

        </div>

        <div>
            <button type="submit" id="CreateTeams">Go!</button>
        </div>

    </form>

    <div id="teamContainer">

        @if (Model.GroupedTeams != null && Model.GroupedTeams.Any())
        {
        <h3>TEAMS</h3>
        <div class="row">
            @for (int i = 0; i < Model.GroupedTeams.Count; i++)
            {
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <strong class="team-heading" id="team-heading-@i">Team @i:</strong>
                            <ul class="list-unstyled">
                                @foreach (var name in Model.GroupedTeams[i])
                                {
                                    <li>@name</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        </div>

            @* <h3>TEAMS</h3>
            <ul id="teamList">

                @for (int i = 1; i < Model.GroupedTeams.Count; i++){
                    
                    <strong class="team-heading" id="team-heading-@i">Team @i:</strong>
                    
                    @foreach (var name in Model.GroupedTeams[i])
                    {
                        <li>@name</li>
                    }
                } 
            </ul> *@

        <button id="BonsaiNamesButton" type="button">Bonsai Names</button>

        }
    </div>
</div>

</html>
